<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>


	<RecipeDef>
		<defName>MakeSandstoneBlocksByHand</defName>
		<label>Whack sandstone chunks into blocks</label>
		<description>Whack sandstone chunks together into something resembling stone blocks. With the only available tools being pieces of the last rocks you whacked together, this job can take quite a while.</description>
		<jobString>Whacking sandstone rocks with other rocks.</jobString>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
		<workAmount>4000</workAmount>
		<workSpeedStat>StonecuttingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>6</minLevel>
			</li>
		</skillRequirements>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<targetCountAdjustment>50</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ChunkSandstone</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<BlocksSandstone>10</BlocksSandstone>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ChunkSandstone</li>
			</thingDefs>
		</fixedIngredientFilter>
  </RecipeDef>

